{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "eslint:recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "jest"
    ],
    "globals": {
        "Feature": true,
        "Scenario": true,
        "describe": true,
        "it": true
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error"],
        "@typescript-eslint/no-unused-vars": [
            1,
            { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
        ],
        "space-before-function-paren": 0,
        "comma-dangle": "off",
        "dot-notation": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
